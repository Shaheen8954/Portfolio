---
import { useTranslations, type LanguageCode } from '@/i18n/ui';
import BaseLayout from '@layouts/BaseLayout.astro';

const lang = (Astro.currentLocale as LanguageCode | undefined) ?? 'en';
const t = useTranslations(lang, 'aboutPage');

const pageMeta = {
  title: t('pageTitle'),
  description: t('pageDescription'),
};
---

<BaseLayout pageTitle={pageMeta.title} pageDescription={pageMeta.description}>
  <section class="py-12 md:py-16">
    <div class="container mx-auto max-w-3xl space-y-10">
      <header class="text-center space-y-3">
        <h1 class="text-3xl md:text-5xl font-bold tracking-tight">{t('title')}</h1>
        <p class="text-muted-foreground text-base md:text-lg">{t('description')}</p>
      </header>

      <div class="space-y-8">
        <section class="space-y-2">
          <h2 class="text-2xl md:text-3xl font-semibold">{t('whatWeDoTitle')}</h2>
          <p class="text-foreground/80 leading-relaxed">{t('whatWeDoBody')}</p>
        </section>
      </div>
    </div>
  </section>
</BaseLayout>
