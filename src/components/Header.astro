---
import type { NavItem } from '@/layouts/BaseLayout.astro';
import Logo from './Logo.astro';
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  navItems: Array<NavItem>;
}
const { navItems } = Astro.props as Props;
---

<header
  class="py-6 border-b sticky top-0 z-50 w-full bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <nav class="mx-auto px-4 max-w-screen-2xl flex items-center justify-between">
    <Logo />
    <div class="flex items-center gap-x-8">
      <div class="flex items-center gap-x-6">
        {
          navItems.map((link) => (
            <a
              href={link.href}
              class="font-medium text-muted-foreground transition-colors hover:text-foreground relative group text-base px-3 py-1.5 -mx-1.5 rounded-md hover:bg-accent/50"
            >
              {link.label}
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full" />
            </a>
          ))
        }
      </div>
      <div class="h-5 w-px bg-border" />
      <div class="flex items-center">
        <ThemeToggle />
      </div>
    </div>
  </nav>
</header>
